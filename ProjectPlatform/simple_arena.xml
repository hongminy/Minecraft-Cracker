<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <About>
    <Summary>Simple Arena!</Summary>
  </About>
  <ServerSection>
    <ServerInitialConditions>
      <Time>
          <StartTime>6000</StartTime>
          <AllowPassageOfTime>false</AllowPassageOfTime>
      </Time>
      <Weather>clear</Weather>
    </ServerInitialConditons>
    <ServerHandlers>
      <FlatWorldGenerator generatorString="3;7,1;1;"/>
      <DrawingDecorator>
        <DrawCuboid type="cobblestone" face="UP" x1="-10" y1="2" z1="-10" x2="10" y2="6" z2="10"/>
        <DrawCuboid type="air" face="UP" x1="-9" y1="2" z1="-9" x2="9" y2="6" z2="9"/>
        <DrawBlock type="barrier" x="0" y="15" z="0"/>
        <DrawBlock type="air" x="0" y="0" z="0"/>
      </DrawingDecorator>
      <ServerQuitWhenAnyAgentFinishes/>
    </ServerHandlers>
  </ServerSection>
  <AgentSection mode="Spectator">
    <Name>"spectator"</Name>
    <AgentStart>
      <Placement x="0.5" y="16" z="0.5" yaw="90" pitch="90"/>
    </AgentStart>
    <AgentHandlers>
      <ChatCommands/>
      <VideoProducer>
        <Width>640</Width>
        <Height>640</Height>
      </VideoProducer>
    </AgentHandlers>
  </AgentSection>
  <!--Main Agent-->
  <AgentSection mode="Survival">
    <Name>"Opponent"</Name>
    <AgentStart>
      <Inventory>
        <InventoryItem slot="0" type="snowball" quantity="64"/>
      </Inventory>
      <Placement x="-5" y="2" z="-5" yaw="-45"/>
    </AgentStart>
    <AgentHandlers>
      <ObservationFromHotBar/>
      <ObservationFromFullStats/>
      <ContinuousMovementCommands turnSpeedDegs="180"/>
    </AgentHandlers>
  </AgentSection>
  <!--opponent Agent-->
  <AgentSection mode="Survival">
    <Name>"Steve"</Name>
    <AgentStart>
      <Inventory>
        <InventoryItem slot="0" type="snowball" quantity="64"/>
      </Inventory>
      <Placement x="5" y="2" z="5" yaw="45"/>
    </AgentStart>
    <AgentHandlers>
      <ObservationFromHotBar/>
      <ObservationFromFullStats/>
      <ContinuousMovementCommands turnSpeedDegs="180"/>
    </AgentHandlers>
  </AgentSection>
</Mission>